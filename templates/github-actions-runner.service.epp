[Unit]
Description=github-actions-runner
After=network.target

[Service]
ExecStart=<%= $github_actions_runner::root_dir %>/runsvc.sh
WorkingDirectory=<%= $github_actions_runner::root_dir %>
KillMode=process
KillSignal=SIGTERM
TimeoutStopSec=5min
User=<%= $github_actions_runner::user %>
Group=<%= $github_actions_runner::group %>

[Install]
WantedBy=multi-user.target
